<Defs>
  <HautsFramework.Hauts_FactionCompDef>
    <defName>Hauts_FCHolder</defName>
    <comps>
	  <!--add comps via xpath here-->
	  <li Class="HautsFramework.HautsFactionCompProperties_SpyPoints">
		<spyPoints>0</spyPoints>
	  </li>
	  <li Class="HautsFramework.HautsFactionCompProperties_BurglaryResponse">
		<initialAlertLevel>0</initialAlertLevel>
		<minAlertGainFromBurgle>5</minAlertGainFromBurgle>
		<alertGainPerMarketValueStolen>0.001</alertGainPerMarketValueStolen>
		<advancedDecayThreshold>50</advancedDecayThreshold><!--if a faction's alert level exceeds this value...-->
		<advancedDecayPerDayPct>0.15</advancedDecayPerDayPct><!--decrease by this percent each day, down to the threshold. Since decay is actually incremented in hours, this is a different curve than "per day" would ordinarily imply-->
