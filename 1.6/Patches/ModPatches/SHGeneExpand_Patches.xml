<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>[SH]Gene Expand</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>
				<!--Make the Melee armor pen nerf/buff work-->
				<li Class="PatchOperationReplace">
					<xpath>/Defs/GeneDef[defName="SHGE_Weakness"]/statFactors/MeleeArmorPenetration</xpath>
					<value>
					  <Hauts_MeleeArmorPenetration>0.7</Hauts_MeleeArmorPenetration>
					</value>
				</li>
				<li Class="PatchOperationReplace">
					<xpath>/Defs/GeneDef[defName="SHGE_MonstrousStrength"]/statFactors/MeleeArmorPenetration</xpath>
					<value>
					  <Hauts_MeleeArmorPenetration>1.3</Hauts_MeleeArmorPenetration>
					</value>
				</li>
			</operations>
		</match>
	</Operation>
</Patch>